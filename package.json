{
  "name": "english-typing-game",
  "version": "1.0.0",
  "description": "English Vocabulary Typing Game for Kids",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win --x64",
    "build-portable": "electron-builder --win portable"
  },
  "keywords": [
    "typing",
    "game",
    "education",
    "kids"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.typinggame.app",
    "productName": "EnglishTypingGame",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    }
  }
}
